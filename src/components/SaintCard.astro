---
/**
 * SaintCard Component
 * Displays a saint with their basic information
 */

import { toWebP } from '../utils/image';

interface Props {
  name: string;
  church: string;
  location: string;
  description: string;
  image?: string;
  link: string;
  translations: {
    learnMore: string;
  };
}

const { name, church, location, description, image, link, translations } = Astro.props;
---

<article class="card saint-card">
  {image && (
    <div class="card-image">
      <picture>
        <source 
          srcset={`${import.meta.env.BASE_URL}images/saints/${toWebP(image)}`} 
          type="image/webp" 
        />
        <img 
          src={`${import.meta.env.BASE_URL}images/saints/${image}`} 
          alt={name} 
          loading="lazy"
          decoding="async"
          width="600"
          height="800"
        />
      </picture>
    </div>
  )}
  <div class="card-content">
    <h3 class="card-title">{name}</h3>
    <div class="location-display">
      <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
        <circle cx="12" cy="10" r="3"/>
      </svg>
      <span>{location}</span>
    </div>
    <p class="church-name">{church}</p>
    <p class="card-description">{description}</p>
    
    <a href={link} class="card-link">
      {translations.learnMore}
      <svg class="card-link-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>

<style>
  /* Saint card uses default card hover shadow from global.css */
  /* No additional styles needed - using utility classes */
</style>

