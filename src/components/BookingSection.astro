---
/**
 * BookingSection Component
 * Displays booking options for tours
 */

interface Props {
  title: string;
  subtitle: string;
  options: {
    title: string;
    description: string;
    features: string[];
  }[];
  contactText: string;
  contactLink: string;
}

const { title, subtitle, options, contactText, contactLink } = Astro.props;
---

<section class="section">
  <div class="container-custom section-content-center">
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      <p class="section-subtitle">{subtitle}</p>
    </div>

    <div class="content-wrapper-lg">
      <div class="grid-auto-fit" style="--grid-min-width: 300px;">
        {options.map((option) => (
          <div class="card booking-card">
            <div class="card-content">
              <h3 class="card-title">{option.title}</h3>
              <p class="text-muted">{option.description}</p>
              
              <ul class="feature-list">
                {option.features.map((feature) => (
                  <li class="feature-item">
                    <svg class="feature-item-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <path d="M16.667 5L7.5 14.167L3.333 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a href={contactLink} class="btn btn-outline" style="width: 100%; justify-content: center;">
                {contactText}
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .booking-card {
    position: relative;
  }

  .booking-card:hover {
    border-color: var(--color-primary-500);
  }

  .booking-card .btn-outline:hover {
    background-color: var(--color-primary-600);
    color: white;
    border-color: var(--color-primary-600);
  }
</style>
