---
/**
 * HeroCarousel Component
 * Image carousel for the hero section
 */

interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;

// Placeholder images - will be replaced with actual trail photos
const images = [
  'hero-1.jpg',
  'hero-2.jpg',
  'hero-3.jpg',
  'hero-4.jpg',
  'hero-5.jpg',
  'hero-6.jpg',
];
---

<section class="hero-carousel">
  <div class="carousel-slides">
    {images.map((image, index) => (
      <div class={`carousel-slide ${index === 0 ? 'active' : ''}`}>
        <div class="carousel-image" style={`background-image: url('${import.meta.env.BASE_URL}images/${image}')`}></div>
      </div>
    ))}
  </div>

  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      <a href={ctaLink} class="hero-cta btn btn-primary">
        {ctaText}
      </a>
    </div>
  </div>

  <div class="carousel-controls">
    {images.map((_, index) => (
      <button
        class={`carousel-dot ${index === 0 ? 'active' : ''}`}
        data-slide={index}
        aria-label={`Go to slide ${index + 1}`}
      />
    ))}
  </div>
</section>

<style>
  .hero-carousel {
    position: relative;
    width: 100%;
    height: 600px;
    overflow: hidden;
    background-color: var(--color-primary-800);
  }

  @media (max-width: 768px) {
    .hero-carousel {
      height: 500px;
    }
  }

  .carousel-slides {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  .carousel-slide.active {
    opacity: 1;
  }

  .carousel-image {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(0.7);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem;
  }

  .hero-text {
    max-width: 900px;
    color: white;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    text-shadow: 2px 4px 12px rgba(0, 0, 0, 0.8);
    color: white;
    line-height: 1.15;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    margin-bottom: 2.5rem;
    text-shadow: 1px 2px 8px rgba(0, 0, 0, 0.8);
    font-weight: 500;
    line-height: 1.6;
  }

  .hero-cta {
    font-size: 1.125rem;
    padding: 1rem 2.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .carousel-controls {
    position: absolute;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 20;
    display: flex;
    gap: 0.875rem;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: var(--radius-full);
    background-color: rgba(255, 255, 255, 0.5);
    border: 2px solid white;
    cursor: pointer;
    transition: all var(--transition-fast);
    padding: 0;
  }

  .carousel-dot:hover {
    background-color: rgba(255, 255, 255, 0.8);
  }

  .carousel-dot.active {
    background-color: var(--color-gold-500);
    width: 36px;
    border-radius: var(--radius-full);
  }
</style>

<script>
  function initCarousel() {
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.carousel-dot');
    let currentSlide = 0;
    let autoplayInterval: number;

    function showSlide(index: number) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % slides.length;
      showSlide(next);
    }

    function startAutoplay() {
      autoplayInterval = window.setInterval(nextSlide, 2200);
    }

    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }

    // Dot click handlers
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        stopAutoplay();
        showSlide(index);
        startAutoplay();
      });
    });

    // Start autoplay
    startAutoplay();

    // Pause on hover
    const carousel = document.querySelector('.hero-carousel');
    if (carousel) {
      carousel.addEventListener('mouseenter', stopAutoplay);
      carousel.addEventListener('mouseleave', startAutoplay);
    }
  }

  // Initialize on page load
  initCarousel();

  // Re-initialize on navigation
  document.addEventListener('astro:after-swap', initCarousel);
</script>
