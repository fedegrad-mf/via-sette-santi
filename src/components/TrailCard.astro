---
/**
 * TrailCard Component
 * Displays a trail with its basic information
 */

interface Props {
  number: number;
  title: string;
  description: string;
  distance: string;
  duration: string;
  difficulty: 'easy' | 'moderate' | 'hard';
  image?: string;
  link: string;
  translations: {
    distance: string;
    duration: string;
    difficulty: string;
    viewDetails: string;
    difficultyLabel: string;
  };
}

const { number, title, description, distance, duration, difficulty, image, link, translations } = Astro.props;

const difficultyColors = {
  easy: 'var(--color-accent-600)',
  moderate: 'var(--color-primary-600)',
  hard: 'var(--color-secondary-700)'
};
---

<article class="trail-card">
  <div class="trail-card-number">{number}</div>
  {image && (
    <div class="trail-card-image">
      <img src={`${import.meta.env.BASE_URL}images/trails/${image}`} alt={title} loading="lazy" />
    </div>
  )}
  <div class="trail-card-content">
    <h3 class="trail-card-title">{title}</h3>
    <p class="trail-card-description">{description}</p>
    
    <div class="trail-card-stats">
      <div class="trail-stat">
        <span class="trail-stat-label">{translations.distance}:</span>
        <span class="trail-stat-value">{distance}</span>
      </div>
      <div class="trail-stat">
        <span class="trail-stat-label">{translations.duration}:</span>
        <span class="trail-stat-value">{duration}</span>
      </div>
      <div class="trail-stat">
        <span class="trail-stat-label">{translations.difficulty}:</span>
        <span class="trail-stat-value" style={`color: ${difficultyColors[difficulty]}`}>
          {translations.difficultyLabel}
        </span>
      </div>
    </div>

    <a href={link} class="trail-card-link">
      {translations.viewDetails} â†’
    </a>
  </div>
</article>

<style>
  .trail-card {
    position: relative;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .trail-card:hover {
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
    border-color: var(--color-primary-500);
  }

  .trail-card-number {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background-color: var(--color-primary-600);
    color: white;
    width: 3rem;
    height: 3rem;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    z-index: 10;
    box-shadow: var(--shadow-lg);
  }

  .trail-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-secondary-100);
  }

  .trail-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .trail-card:hover .trail-card-image img {
    transform: scale(1.05);
  }

  .trail-card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
  }

  .trail-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .trail-card-description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .trail-card-stats {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    background-color: color-mix(in srgb, var(--color-surface-hover) 50%, transparent);
    border-radius: var(--radius-md);
  }

  .trail-stat {
    display: flex;
    justify-content: space-between;
    font-size: 0.9375rem;
  }

  .trail-stat-label {
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .trail-stat-value {
    color: var(--color-text);
    font-weight: 600;
  }

  .trail-card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary-600);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-fast);
    margin-top: auto;
  }

  .trail-card-link:hover {
    color: var(--color-primary-700);
    gap: 0.75rem;
  }
</style>
