---
/**
 * ReviewCard Component
 * Displays a user review/testimonial
 */

interface Props {
  name: string;
  date: string;
  rating: number;
  text: string;
  location?: string;
}

const { name, date, rating, text, location } = Astro.props;
---

<article class="card-base review-card">
  <div class="card-content" style="gap: 1rem;">
    <div class="review-header">
      <div class="review-avatar">
        {name.charAt(0).toUpperCase()}
      </div>
      <div class="review-meta">
        <h4 style="font-size: 1.125rem; font-weight: 600; color: var(--color-text); margin: 0 0 0.25rem 0;">{name}</h4>
        {location && <p style="font-size: 0.875rem; color: var(--color-text-muted); margin: 0 0 0.5rem 0;">{location}</p>}
        <div class="review-rating">
          {Array.from({ length: 5 }).map((_, i) => (
            <span class={`star ${i < rating ? 'filled' : ''}`}>â˜…</span>
          ))}
        </div>
      </div>
    </div>
    
    <p class="text-muted" style="line-height: 1.6; margin: 0;">{text}</p>
    
    <time style="display: block; font-size: 0.875rem; color: var(--color-text-muted);" datetime={date}>{date}</time>
  </div>
</article>

<style>
  .review-card:hover {
    transform: translateY(-2px);
  }

  .review-header {
    display: flex;
    gap: 1rem;
  }

  .review-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: var(--radius-lg);
    background-color: var(--color-primary-600);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
    flex-shrink: 0;
    border: 2px solid var(--color-primary-200);
  }

  .review-meta {
    flex-grow: 1;
  }

  .review-rating {
    display: flex;
    gap: 0.25rem;
  }

  .star {
    color: var(--color-border);
    font-size: 1.125rem;
  }

  .star.filled {
    color: var(--color-gold-500);
  }
</style>
