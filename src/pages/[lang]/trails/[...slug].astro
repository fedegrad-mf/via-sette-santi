---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../../layouts/Base.astro";
import Navigation from "../../../components/Navigation.astro";
import { useTranslations } from "../../../i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import { languages } from "../../../i18n/languages";
import { toWebP } from "../../../utils/image";

export async function getStaticPaths() {
  const pages = await getCollection("trails");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return {
      params: {
        lang,
        slug: slug.join("/") || undefined,
      },
      props: page,
    };
  });

  return paths;
}

const { lang, slug } = Astro.params;
const page = Astro.props;
const { Content } = await render(page);
const t = useTranslations(lang as keyof typeof languages);

// Get all trails for navigation
const allTrails = await getCollection("trails", ({ id }) => {
  return id.startsWith(`${lang}/`);
});
const sortedTrails = allTrails.sort((a, b) => a.data.number - b.data.number);

// Find previous and next trails
const currentIndex = sortedTrails.findIndex((trail) => trail.id === page.id);
const previousTrail = currentIndex > 0 ? sortedTrails[currentIndex - 1] : null;
const nextTrail = currentIndex < sortedTrails.length - 1 ? sortedTrails[currentIndex + 1] : null;

// SEO metadata
const pageTitle = `${page.data.title} - ${t('trail.stage')} ${page.data.number} | Via dei Sette Santi`;
const pageDescription = page.data.description || `${page.data.distance} - ${page.data.duration} - ${t('trails.difficulty')}: ${t(`trails.difficulty.${page.data.difficulty}`)}`;

// Generate image path
const imagePath = page.data.image ? `${import.meta.env.BASE_URL}images/trails/${page.data.image}` : undefined;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  ogImage={imagePath}
  ogType="article"
  preloadImage={imagePath}
>
  <!-- Hero Section with Image -->
  {imagePath && (
    <section class="relative h-96 overflow-hidden">
      <picture>
        <source 
          srcset={toWebP(imagePath)} 
          type="image/webp" 
        />
        <img
          src={imagePath}
          alt={page.data.title}
          class="w-full h-full object-cover"
          loading="eager"
          decoding="async"
          width="800"
          height="600"
        />
      </picture>
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 container-custom py-8 px-4">
        <div class="flex items-center gap-4 mb-4">
          <span class="bg-primary-600 text-white w-16 h-16 rounded-full flex items-center justify-center text-3xl font-bold shadow-lg">
            {page.data.number}
          </span>
          <div>
            <p class="text-white/90 text-sm font-medium uppercase tracking-wide mb-1">
              {t('trail.stage')} {page.data.number}
            </p>
            <h1 class="text-4xl md:text-5xl font-bold text-white m-0">{page.data.title}</h1>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <article class="section">
    <div class="container-custom">
      <!-- Description & Technical Details - 2 Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        <!-- Left Column: Description and Highlights -->
        <div class="lg:col-span-2">
          <!-- Description -->
          <p class="text-xl text-muted leading-relaxed mb-8">{page.data.description}</p>
          
          <!-- Trail Description Content -->
          <div class="prose prose-lg max-w-none dark:prose-invert mb-8">
            <Content />
          </div>

          <!-- Highlights -->
          {page.data.highlights && page.data.highlights.length > 0 && (
            <div>
              <h3 class="text-2xl font-bold mb-4">{t('trail.highlights')}</h3>
              <ul class="feature-list">
                {page.data.highlights.map((highlight: string) => (
                  <li class="feature-item">
                    <svg class="feature-item-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-base">{highlight}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>

        <!-- Right Column: Technical Details (Sticky) -->
        <div class="lg:col-span-1">
          <div class="info-box sticky top-24">
            <h3 class="text-xl font-bold mb-6">{t('trail.details')}</h3>
            
            <div class="space-y-4">
              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                  </svg>
                  <strong class="info-item-label">{t('trails.distance')}</strong>
                </div>
                <span class="info-item-value">{page.data.distance}</span>
              </div>

              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <strong class="info-item-label">{t('trails.duration')}</strong>
                </div>
                <span class="info-item-value">{page.data.duration}</span>
              </div>

              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                  <strong class="info-item-label">{t('trail.elevation')}</strong>
                </div>
                <span class="info-item-value">{page.data.elevation}</span>
              </div>

              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <strong class="info-item-label">{t('trails.difficulty')}</strong>
                </div>
                <span class="info-item-value capitalize">{t(`trails.difficulty.${page.data.difficulty}`)}</span>
              </div>

              <div class="pt-4 border-t border-surface-200 dark:border-surface-700">
                <div class="info-item">
                  <div class="flex items-center gap-2 mb-1">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <strong class="info-item-label">{t('trail.startPoint')}</strong>
                  </div>
                  <span class="info-item-value">{page.data.startPoint}</span>
                </div>
              </div>

              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                  </svg>
                  <strong class="info-item-label">{t('trail.endPoint')}</strong>
                </div>
                <span class="info-item-value">{page.data.endPoint}</span>
              </div>

              <!-- GPX Download Button -->
              <div class="pt-4 border-t border-surface-200 dark:border-surface-700">
                <a
                  href="#"
                  class="flex items-center justify-center gap-2 px-4 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-md hover:shadow-lg w-full"
                  aria-label={t('trail.downloadGpx')}
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                  {t('trail.downloadGpx')}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Map & Gallery - Full Width -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <!-- Map Section -->
        <div>
          <h2 class="text-2xl font-bold mb-6">{t('trail.map')}</h2>
          <div class="info-box bg-surface-100 dark:bg-surface-800 aspect-video flex items-center justify-center">
            <div class="text-center text-muted">
              <svg class="w-16 h-16 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
              </svg>
              <p class="text-sm">{t('trail.map')} - Coming Soon</p>
            </div>
          </div>
        </div>

        <!-- Photo Gallery Preview -->
        <div>
          <h2 class="text-2xl font-bold mb-6">{t('trail.gallery')}</h2>
          <div class="grid grid-cols-2 gap-3">
            {[1, 2, 3, 4].map((index) => (
              <div class="aspect-video rounded-lg overflow-hidden bg-surface-100 dark:bg-surface-800 flex items-center justify-center">
                <svg class="w-12 h-12 text-surface-400 dark:text-surface-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Trail Navigation -->
      <Navigation
        lang={lang}
        type="trails"
        previous={previousTrail}
        next={nextTrail}
        homeUrl={getRelativeLocaleUrl(lang, 'trails')}
      />
    </div>
  </article>
</BaseLayout>

<style>
  .prose {
    color: var(--color-text);
  }

  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-heading);
    font-size: 1.75rem;
    font-weight: 700;
  }

  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-heading);
    font-size: 1.5rem;
    font-weight: 600;
  }

  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    color: var(--color-heading);
    font-weight: 600;
  }

  .prose a {
    color: var(--color-primary-600);
    text-decoration: underline;
  }

  .prose a:hover {
    color: var(--color-primary-700);
  }

  /* Sticky sidebar on larger screens */
  @media (min-width: 1024px) {
    .sticky {
      position: sticky;
      top: 6rem;
      align-self: start;
    }
  }
</style>
