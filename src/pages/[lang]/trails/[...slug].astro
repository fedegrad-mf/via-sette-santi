---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../../layouts/Base.astro";

export async function getStaticPaths() {
  const pages = await getCollection("trails");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return {
      params: {
        lang,
        slug: slug.join("/") || undefined,
      },
      props: page,
    };
  });

  return paths;
}

const { lang, slug } = Astro.params;
const page = Astro.props;
const { Content } = await render(page);
const formattedDate = page.data.date.toLocaleString(lang);

// SEO metadata
const pageTitle = `${page.data.title} - Stage ${page.data.number} | Via dei Sette Santi`;
const pageDescription = page.data.description || `${page.data.distance} - ${page.data.duration} - Difficulty: ${page.data.difficulty}`;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  ogImage={page.data.image}
  ogType="article"
>
  <article class="container-custom content-wrapper py-8 px-4">
    <header class="mb-8">
      <div class="flex items-center gap-4 mb-4">
        <span class="bg-primary-600 text-white w-12 h-12 rounded-full flex items-center justify-center text-2xl font-bold">
          {page.data.number}
        </span>
        <h1 class="page-title m-0">{page.data.title}</h1>
      </div>
      
      <p class="text-xl text-muted mb-6">{page.data.description}</p>

      <div class="info-box grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="info-item">
          <strong class="info-item-label">Distance</strong>
          <span class="info-item-value">{page.data.distance}</span>
        </div>
        <div class="info-item">
          <strong class="info-item-label">Duration</strong>
          <span class="info-item-value">{page.data.duration}</span>
        </div>
        <div class="info-item">
          <strong class="info-item-label">Difficulty</strong>
          <span class="info-item-value capitalize">{page.data.difficulty}</span>
        </div>
        <div class="info-item">
          <strong class="info-item-label">Elevation</strong>
          <span class="info-item-value">{page.data.elevation}</span>
        </div>
      </div>
    </header>

    <div class="prose prose-lg">
      <Content />
    </div>

    {page.data.highlights && page.data.highlights.length > 0 && (
      <div class="info-box mt-8">
        <h3 class="mt-0">Highlights</h3>
        <ul class="m-0 pl-6">
          {page.data.highlights.map((highlight: string) => (
            <li class="mb-2">{highlight}</li>
          ))}
        </ul>
      </div>
    )}
  </article>
</BaseLayout>
