---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../../layouts/Base.astro";
import { useTranslations } from "../../../i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import { languages } from "../../../i18n/languages";
import { toWebP } from "../../../utils/image";

export async function getStaticPaths() {
  const pages = await getCollection("hosts");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return {
      params: {
        lang,
        slug: slug.join("/").replace(/\.md$/, "") || undefined,
      },
      props: page,
    };
  });

  return paths;
}

const { lang, slug } = Astro.params;
const page = Astro.props;
const { Content } = await render(page);
const t = useTranslations(lang as keyof typeof languages);

// Get all saints for navigation
const allHosts = await getCollection("hosts", ({ id }) => {
  return id.startsWith(`${lang}/`);
});
const sortedHosts = allHosts.sort((a, b) => a.data.name.localeCompare(b.data.name));

// SEO metadata
const pageTitle = `${page.data.name} - ${t(`host.type.${page.data.type}`)} | Via dei Sette Santi`;
const pageDescription = page.data.description || `${page.data.name} in ${page.data.location}`;

// Generate image path
const imagePath = page.data.image ? `${import.meta.env.BASE_URL}images/hosts/${page.data.image}` : undefined;

// Google Maps URLs
const mapsUrl = `https://www.google.com/maps?q=${page.data.coordinates.lat},${page.data.coordinates.lng}`;
const directionsUrl = `https://www.google.com/maps/dir/?api=1&destination=${page.data.coordinates.lat},${page.data.coordinates.lng}`;
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  ogImage={imagePath}
  ogType="article"
  preloadImage={imagePath}
>
  <!-- Hero Section with Image -->
  {imagePath && (
    <section class="relative h-96 overflow-hidden">
      <picture>
        <source 
          srcset={toWebP(imagePath)} 
          type="image/webp" 
        />
        <img
          src={imagePath}
          alt={page.data.name}
          class="w-full h-full object-cover"
          loading="eager"
          decoding="async"
          width="1200"
          height="800"
        />
      </picture>
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
      <div class="absolute bottom-0 left-0 right-0 container-custom py-8 px-4">
        <div class="flex items-center gap-4 mb-4">
          <div class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-medium uppercase shadow-lg">
            {t(`host.type.${page.data.type}`)}
          </div>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-white m-0">{page.data.name}</h1>
        <p class="text-white/90 text-lg mt-2">
          <svg class="w-5 h-5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {page.data.location}
        </p>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <article class="section">
    <div class="container-custom">
      <!-- Description & Details - 2 Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        <!-- Left Column: Description and Content -->
        <div class="lg:col-span-2">
          <!-- Description -->
          <p class="text-xl text-muted leading-relaxed mb-8">{page.data.description}</p>
          
          <!-- Main Content -->
          <div class="prose prose-lg max-w-none dark:prose-invert mb-8">
            <Content />
          </div>

          <!-- Services Section -->
          <div class="mb-8">
            <h3 class="text-2xl font-bold mb-4">{t('host.services')}</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
              {page.data.services.map((service) => (
                <div class="flex items-center gap-2 p-3 bg-surface-100 dark:bg-surface-800 rounded-lg">
                  <svg class="w-5 h-5 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class="text-sm font-medium">{t(`host.service.${service}`)}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Right Column: Contact Details (Sticky) -->
        <div class="lg:col-span-1">
          <div class="info-box sticky top-24">
            <h3 class="text-xl font-bold mb-6">{t('host.contacts')}</h3>
            
            <div class="space-y-4">
              <!-- Phone -->
              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <strong class="info-item-label">{t('host.phone')}</strong>
                </div>
                <a href={`tel:${page.data.phone}`} class="info-item-value text-primary-600 hover:text-primary-700 transition-colors">
                  {page.data.phone}
                </a>
              </div>

              <!-- Email -->
              {page.data.email && (
                <div class="info-item">
                  <div class="flex items-center gap-2 mb-1">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    <strong class="info-item-label">{t('host.email')}</strong>
                  </div>
                  <a href={`mailto:${page.data.email}`} class="info-item-value text-primary-600 hover:text-primary-700 transition-colors break-all">
                    {page.data.email}
                  </a>
                </div>
              )}

              <!-- Address -->
              <div class="info-item">
                <div class="flex items-center gap-2 mb-1">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <strong class="info-item-label">{t('host.address')}</strong>
                </div>
                <span class="info-item-value">{page.data.address}</span>
              </div>

              <!-- Price Range -->
              {page.data.priceRange && (
                <div class="info-item">
                  <div class="flex items-center gap-2 mb-1">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <strong class="info-item-label">{t('host.priceRange')}</strong>
                  </div>
                  <span class="info-item-value">{t(`host.priceRange.${page.data.priceRange}`)}</span>
                </div>
              )}

              <!-- Website Button -->
              {page.data.website && (
                <div class="pt-4 border-t border-surface-200 dark:border-surface-700">
                  <a
                    href={page.data.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center gap-2 px-4 py-3 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-md hover:shadow-lg w-full"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                    </svg>
                    {t('host.website')}
                  </a>
                </div>
              )}

              <!-- Social Media Links -->
              {page.data.social && Object.values(page.data.social).some(v => v) && (
                <div class="pt-4 border-t border-surface-200 dark:border-surface-700">
                  <strong class="info-item-label block mb-3">{t('host.social')}</strong>
                  <div class="flex gap-3">
                    {page.data.social.facebook && (
                      <a
                        href={page.data.social.facebook}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-10 h-10 bg-surface-100 dark:bg-surface-800 rounded-lg hover:bg-primary-600 hover:text-white transition-colors"
                        aria-label="Facebook"
                      >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                      </a>
                    )}
                    {page.data.social.instagram && (
                      <a
                        href={page.data.social.instagram}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-10 h-10 bg-surface-100 dark:bg-surface-800 rounded-lg hover:bg-primary-600 hover:text-white transition-colors"
                        aria-label="Instagram"
                      >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                      </a>
                    )}
                    {page.data.social.tripadvisor && (
                      <a
                        href={page.data.social.tripadvisor}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-10 h-10 bg-surface-100 dark:bg-surface-800 rounded-lg hover:bg-primary-600 hover:text-white transition-colors"
                        aria-label="TripAdvisor"
                      >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm5.395 7.031c.731 0 1.322.592 1.322 1.323s-.591 1.322-1.322 1.322-1.323-.591-1.323-1.322.592-1.323 1.323-1.323zm-10.79 0c.731 0 1.323.592 1.323 1.323s-.592 1.322-1.323 1.322-1.322-.591-1.322-1.322.591-1.323 1.322-1.323zm10.79 1.969c1.295 0 2.346 1.051 2.346 2.346S17.69 15.692 16.395 15.692 14.049 14.641 14.049 13.346s1.051-2.346 2.346-2.346zm-10.79 0c1.295 0 2.346 1.051 2.346 2.346S7.9 15.692 6.605 15.692 4.259 14.641 4.259 13.346s1.051-2.346 2.346-2.346zM12 7.111c1.569 0 2.889.787 3.706 1.982A5.402 5.402 0 0012 8.037a5.402 5.402 0 00-3.706 1.056C9.111 7.898 10.431 7.111 12 7.111z"/>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Map Section - Full Width -->
      <div class="mb-16" id="map">
        <h2 class="text-2xl font-bold mb-6">{t('host.location')}</h2>
        <div class="info-box bg-surface-100 dark:bg-surface-800 rounded-xl overflow-hidden">
          <div class="aspect-video flex items-center justify-center">
            <div class="w-full h-full flex flex-col items-center justify-center text-center p-8">
              <svg class="w-16 h-16 mx-auto mb-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="text-lg font-medium mb-2">{page.data.name}</p>
              <p class="text-sm text-muted mb-4">{page.data.address}</p>
              <p class="text-xs text-muted font-mono mb-6">
                Lat: {page.data.coordinates.lat.toFixed(4)}, Lng: {page.data.coordinates.lng.toFixed(4)}
              </p>
              <div class="flex gap-4">
                <a
                  href={mapsUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-4 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 transition-colors shadow-md hover:shadow-lg text-sm"
                >
                  {t('host.viewOnMap')}
                </a>
                <a
                  href={directionsUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-4 py-2 bg-surface-200 dark:bg-surface-700 text-text rounded-lg font-medium hover:bg-surface-300 dark:hover:bg-surface-600 transition-colors shadow-md hover:shadow-lg text-sm"
                >
                  {t('host.getDirections')}
                </a>
              </div>
              <p class="text-sm text-muted mt-4">Interactive map - Coming Soon</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Back to hosts link -->
      <div class="text-center">
        <a
          href={getRelativeLocaleUrl(lang, 'hosts')}
          class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700 transition-colors font-medium"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          {t('hosts.title')}
        </a>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  /* Typography for prose content */
  .prose {
    color: var(--color-text);
  }

  .prose h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-heading);
    font-size: 1.75rem;
    font-weight: 700;
  }

  .prose h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-heading);
    font-size: 1.5rem;
    font-weight: 600;
  }

  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    color: var(--color-heading);
    font-weight: 600;
  }

  .prose a {
    color: var(--color-primary-600);
    text-decoration: underline;
  }

  .prose a:hover {
    color: var(--color-primary-700);
  }

  /* Sticky sidebar on larger screens */
  @media (min-width: 1024px) {
    .sticky {
      position: sticky;
      top: 6rem;
      align-self: start;
    }
  }
</style>

